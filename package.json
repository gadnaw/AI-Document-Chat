{
  "name": "ai-document-chat",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:ui": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:unit": "vitest run tests/unit",
    "test:load": "k6 run k6/load-tests.js",
    "test:load:smoke": "k6 run k6/load-tests.js -e SCENARIO=smoke",
    "test:load:performance": "k6 run k6/load-tests.js -e SCENARIO=performance",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:coverage": "vitest run --coverage",
    "monitor:uptime": "node scripts/uptime-monitor.js",
    "monitor:health": "curl -s http://localhost:3000/api/health | jq '.'",
    "monitor:circuit": "node -e \"const { circuitBreakerRegistry } = require('./src/lib/monitoring/circuit-breaker'); console.log(JSON.stringify(circuitBreakerRegistry.getAllStatus(), null, 2))\"",
    "sentry:test": "node -e \"const { captureClientError } = require('./sentry.client.config'); captureClientError(new Error('Test error from Sentry'), { userAction: 'Testing Sentry integration' }); console.log('Test error captured');\""
  },
  "dependencies": {
    "@ai-sdk/openai": "^3.0.26",
    "@langchain/community": "^1.1.12",
    "@langchain/core": "^1.1.19",
    "@langchain/openai": "^1.2.5",
    "@sentry/nextjs": "^10.38.0",
    "@sentry/node": "^10.38.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.95.3",
    "@upstash/ratelimit": "^2.0.8",
    "@upstash/redis": "^1.36.2",
    "ai": "^6.0.77",
    "ioredis": "^5.9.2",
    "langchain": "^1.2.18",
    "lru-cache": "^11.2.5",
    "next": "^14.2.0",
    "pdf-parse": "^1.1.4",
    "pdfjs-dist": "^5.4.624",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sonner": "^1.4.0",
    "tiktoken": "^1.0.22"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@sentry/cli": "^3.1.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.32",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "k6": "^0.0.0",
    "playwright": "^1.58.2",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.0",
    "vitest": "^4.0.18"
  }
}
